<div class="box" *ngIf='(totalPage>1)||total'>
  <ul class="page_con" *ngIf='totalPage>1'>
    <li class="page_icon" [class.disabled]="pageNum <= 1">
      <a title="首页" (click)="goFirst(1)"><i class="datatable-icon-prev"></i></a>
    </li>
    <li class="page_icon" [class.disabled]="pageNum <= 1">
      <a title="上一页" (click)="goPrevious(pageNum)"><i class="datatable-icon-left"></i></a>
    </li>
    <li *ngIf="pageNum > 3">
      <a (click)="changePage(pageNum-3)">{{pageNum-3}}</a>
    </li>
    <li *ngIf="pageNum > 2">
      <a (click)="changePage(pageNum-2)">{{pageNum-2}}</a>
    </li>
    <li *ngIf="pageNum > 1">
      <a (click)="changePage(pageNum-1)">{{pageNum-1}}</a>
    </li>
    <li class="active">
      <a (click)="changePage(pageNum)">{{pageNum}}</a>
    </li>
    <li *ngIf="pageNum <= totalPage-1">
      <a (click)="changePage(pageNum+1)">{{pageNum+1}}</a>
    </li>
    <li *ngIf="pageNum <= totalPage-2">
      <a (click)="changePage(pageNum+2)">{{pageNum+2}}</a>
    </li>
    <li *ngIf="pageNum <= totalPage-3">
      <a (click)="changePage(pageNum+3)">{{pageNum+3}}</a>
    </li>
    <li class="page_icon" [class.disabled]="pageNum >= totalPage">
      <a title="下一页" (click)="goNext(pageNum)"><i class="datatable-icon-right"></i></a>
    </li>
    <li class="page_icon" [class.disabled]="pageNum >= totalPage">
      <a title="尾页" (click)="goEnd(totalPage)"><i class="datatable-icon-skip"></i></a>
    </li>
  </ul>
