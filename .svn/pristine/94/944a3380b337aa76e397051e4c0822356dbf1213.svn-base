.card .card-header h5 {
  padding-left: 300px;
}
.header-right {
  position: absolute;
  right: 30px;
  top: 17px;
}
.header-left {
  position: absolute;
  left: 120px;
  top: 17px;
}
.header-left select {
  display: block;
  width: 100%;
  padding: 0.375rem 0.75rem;
  font-size: 14px;
  border-radius: 2px;
  border: 1px solid #ebedf2;
  color: #575962;
  background: #fff;
  background-clip: padding-box;
  height: 34px;
  max-width: 400px;
}
.form-group-btn {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  -webkit-box-pack: end;
  -ms-flex-pack: end;
  justify-content: flex-end;
  padding: 1rem;
  padding-bottom: 0;
  margin-bottom: 0;
  border-top: 1px solid #e9ecef;
}
.form-group-btn .btn {
  margin-left: 10px;
}