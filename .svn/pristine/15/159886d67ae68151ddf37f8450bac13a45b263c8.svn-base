.statistic {
    min-width: 1000px;
    display: flex;
    align-items: center;
    justify-content: space-around;
    text-align: center;
    white-space: nowrap;
    overflow: hidden;
    p {
        padding: 15px 60px;
        background-color: #CC9966;
        color: #fff;
        border-radius: 4px;
        font-size: 14px;
        margin: 0 20px;
        span {
            font-size: 48px;
        }
    }
}
.over-auto{
    overflow: auto;
}
